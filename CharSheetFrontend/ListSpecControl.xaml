<UserControl x:Class="CharSheetFrontend.ListSpecControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CharSheetFrontend"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>This is a ListSpecControl</TextBlock>

        <ComboBox x:Name="comboBox" ItemsSource="{Binding}" Width="200" HorizontalAlignment="Left">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Opt}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    
    </StackPanel>
</UserControl>
